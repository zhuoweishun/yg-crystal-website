{
  "name": "yg-crystal-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "build:prod": "cross-env NODE_ENV=production ESLINT_NO_DEV_ERRORS=true next build",
    "start:prod": "cross-env NODE_ENV=production next start -p 3002 -H 0.0.0.0",
    "deploy": "npm run build:prod && pm2 start ecosystem.config.js --env production",
    "deploy:restart": "pm2 restart yg-crystal-website",
    "deploy:stop": "pm2 stop yg-crystal-website",
    "deploy:logs": "pm2 logs yg-crystal-website",
    "deploy:status": "pm2 status"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.27.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "autoprefixer": "^10.4.21",
    "framer-motion": "^12.23.22",
    "lucide-react": "^0.544.0",
    "next": "15.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cross-env": "^10.1.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "tailwindcss": "^3.4.0",
    "typescript": "^5"
  }
}

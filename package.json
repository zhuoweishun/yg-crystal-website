{
  "name": "yg-crystal-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development next dev --turbopack",
    "dev:local": "cross-env NODE_ENV=development next dev --turbopack --port 3000",
    "dev:debug": "cross-env NODE_ENV=development DEBUG=true next dev --turbopack",
    "build": "next build --turbopack",
    "build:dev": "cross-env NODE_ENV=development next build --turbopack",
    "build:prod": "cross-env NODE_ENV=production ESLINT_NO_DEV_ERRORS=true next build && node scripts/post-build.js",
    "build:prod-no-turbo": "cross-env NODE_ENV=production ESLINT_NO_DEV_ERRORS=true next build",
    "start": "next start",
    "start:dev": "cross-env NODE_ENV=development PORT=3000 next start",
    "start:prod": "cross-env NODE_ENV=production PORT=3002 HOSTNAME=0.0.0.0 node .next/standalone/server.js",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "type-check": "tsc --noEmit",
    "env:check": "node scripts/check-env.js",
    "env:validate": "node scripts/validate-env.js",
    "env:switch": "node scripts/switch-env.js switch",
    "env:status": "node scripts/switch-env.js status",
    "env:list": "node scripts/switch-env.js list",
    "deploy": "npm run build:prod && pm2 start ecosystem.config.js --env production",
    "deploy:restart": "pm2 restart yg-crystal-website",
    "deploy:stop": "pm2 stop yg-crystal-website",
    "deploy:logs": "pm2 logs yg-crystal-website",
    "deploy:status": "pm2 status"
  },
  "dependencies": {
    "autoprefixer": "^10.4.21",
    "framer-motion": "^12.23.22",
    "lucide-react": "^0.544.0",
    "next": "^15.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cross-env": "^10.1.0",
    "eslint": "^9",
    "eslint-config-next": "^15.5.4",
    "tailwindcss": "^3.4.0",
    "typescript": "^5"
  }
}
